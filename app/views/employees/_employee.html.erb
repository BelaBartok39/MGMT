<%= turbo_frame_tag employee do %>
<div class="line-item">
  <div class="line-item__name">
    <%= employee.name %>
    <div class="line-item__description">
      <%= simple_format employee.comment %>
    </div>
  </div>
  <div class="line-item__quantity number_bump">
    <%= employee.employee_number %>
  </div>
  <div class="quote__actions">


    <%= link_to "<i class='bi bi-trash' 
                style='font-size: 1.5rem; color: 
                red;'></i>".html_safe,
                [@staff_date, employee],
                data: {"turbo-method": :delete},               
                form: { data: {turbo_frame: "_top" } },
                class:"btn btn--light staff_icon" %>

    <%= link_to "<i class='bi bi-pencil-square' 
                style='font-size: 1.5rem; color: 
                black;'></i>".html_safe,
                [:edit, @staff_date, employee],
                class:"btn btn--light staff_icon" %>
  </div>
</div>
<% end %>
