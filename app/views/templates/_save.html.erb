<%= simple_form_for @template, method: :post, data: { turbo: false } do |f| %>     

  <%= f.error_notification %>

  <div class="mb-3">
    <%= f.input :name, input_html: { autofocus: true } %>
  </div>
  <div class="mb-4 mt-4 text-end">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>